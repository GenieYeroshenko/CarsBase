<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Servlet 2.3 deployment description</display-name>

    <welcome-file-list>
        <welcome-file>jsp/cars-list.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>ru.yeroshenko.web.AddCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listCar</servlet-name>
        <servlet-class>ru.yeroshenko.web.ListCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/add-car</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listCar</servlet-name>
        <url-pattern>/list-car</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>